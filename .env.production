# Enable aggregator routing (1inch, Paraswap, LiFi, etc.)
ENABLE_AGGREGATORS=true

# Enable gas optimization
ENABLE_GAS_OPTIMIZATION=true

# ==============================================================================
# RISK MANAGEMENT & SAFETY LIMITS
# ==============================================================================

# Maximum gas price willing to pay (gwei)
MAX_BASE_FEE_GWEI=500

# Maximum priority fee (gwei)
MAX_PRIORITY_FEE_GWEI=100

# Minimum profit threshold to execute trade (USD)
MIN_PROFIT_USD=1.0

# Minimum profit threshold for cross-chain (higher due to bridge fees)
MIN_PROFIT_CROSS_CHAIN_USD=10.0

# Maximum slippage tolerance (basis points, 100 = 1%)
MAX_SLIPPAGE_BPS=100

# Maximum percentage of pool TVL to borrow (0.2 = 20%)
MAX_TVL_SHARE=0.20

# Minimum loan size (USD)
MIN_LOAN_USD=100

# Maximum loan size (USD) - safety ceiling
MAX_LOAN_USD=100000

# Circuit breaker: max consecutive failures before pause
MAX_CONSECUTIVE_FAILURES=10

# Rate limiting: max trades per minute
MAX_TRADES_PER_MINUTE=10

# Rate limiting: max trades per hour
MAX_TRADES_PER_HOUR=100

